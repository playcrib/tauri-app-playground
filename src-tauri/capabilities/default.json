{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            {
              "validator": "\\S+"
            }
          ],
          "cmd": "",
          "name": "binaries/yt-dlp",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open",
    "dialog:default"
  ]
}